<div>
    <h5>Add an ingredient</h5>
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, input_html: { class: 'select2' } %>
        <%= f.button :submit, "Add ingredient", class: 'btn btn-primary' %>
    <% end %>
</div>
