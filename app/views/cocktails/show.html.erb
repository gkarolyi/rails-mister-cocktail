<% @title = @cocktail.name %>
<% @left_nav_icon = (link_to icon('fas', 'cocktail'), cocktails_path, class: "btn btn-primary") %>

<%= render 'components/navbar' %>

<div class="d-flex justify-content-between align-items-center">
    <h4>Ingredients</h4>
</div>
<ul class="list-group">
<% @cocktail.doses.each do |dose| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="div">
            <span class="btn btn-warning"><%= dose.ingredient.name %></span>
            <%= dose.id %>
        </div>
        <div class="div">
            <%= link_to icon('far', 'trash-alt'), [@cocktail, dose], html_options = {
                method: :delete,
                class: "btn btn-danger"
            }%>
        </div>
    </li>
<% end %>
</ul>
<br>
<div>
    <h5>Add an ingredient</h5>
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.button :submit, "Add ingredient", class: 'btn btn-primary' %>
    <% end %>
</div>
